<% layout('layout/default') %>

<% block('plugin_css').append('<link href="../assets/global/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" type="text/css"/>') %>
<% block('plugin_css').append('<link href="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css"/>') %>
<% block('plugin_css').append('<link href="../assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css"/>') %>
<% block('plugin_css').append('<link href="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css"/>') %>

<!-- BEGIN CONTAINER -->
<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <!-- BEGIN PAGE HEAD-->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Create Tasks</h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE CONTENT BODY -->
        <div class="page-content">
            <div class="container">
                <!-- BEGIN PAGE BREADCRUMBS -->
                <ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="/">Home</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="/tasks">Tasks</a>
                        <i class="fa fa-square"></i>
                    </li>
                    <li><span>Create Task</span></li>
                    <li><i class="fa fa-circle"></i> </li>
                    <li><i class="glyphicon glyphicon-calendar"></i> <%= new Date(Date.now()).toDateString()  %></li>
                    <li><i class="fa fa-circle"></i> </li>
                    <li><i class="glyphicon glyphicon-time"></i> <span id="timer"></span></li>
                </ul>
                <!-- END PAGE BREADCRUMBS -->
                <% include ../../errors/flash %>
                <!-- BEGIN PAGE CONTENT INNER -->
                <div class="page-content-inner">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-list font-green"></i>
                                <span class="caption-subject font-green bold uppercase">Create New Tasks</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <form method="post" action="/tasks/create" accept-charset="UTF-8" class="form-horizontal" role="form">
                                    <div class="col-md-6 col-md-offset-3">
                                        <div class="form-body">
                                            <div class="form-group">
                                                <label>Task Title</label>
                                                <div class="input-icon">
                                                    <i class="fa fa-user"></i>
                                                    <input type="text" class="form-control" required name="name" placeholder="Task Title" value=""> </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Order By</label>
                                                <div class="input-icon">
                                                    <i class="fa fa-user"></i>
                                                    <input type="number" class="form-control" required name="order_by" placeholder="Order By" value=""> </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Product</label>
                                                <div>
                                                    <select class="bs-select form-control" required="required" id="product_id" name="product">
                                                        <option value="">-- Select Product --</option>
                                                        <% if(typeof products != "undefined"){ %>
                                                            <% products.forEach(function (product) {%>
                                                                <option value="<%- product._id %>"><%- product.name %></option>
                                                            <%}); %>
                                                        <% }%>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Module</label>
                                                <select class="bs-select form-control" required="required" id="module_id" name="module">

                                                </select>
                                            </div>
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea rows="3" class="form-control" placeholder="Task Description" name="describe"></textarea>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <button type="submit" class="btn btn-info pull-right"> Submit </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT INNER -->
            </div>
        </div>
        <!-- END PAGE CONTENT BODY -->
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
</div>
<!-- END CONTAINER -->
<% block('plugin_js').append('<script src="../assets/global/plugins/bootstrap-select/js/bootstrap-select.js" type="text/javascript"></script>') %>
<% block('plugin_js').append('<script src="../assets/global/scripts/datatable.js" type="text/javascript"></script>') %>
<% block('plugin_js').append('<script src="../assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>') %>
<% block('plugin_js').append('<script src="../assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>') %>
<% block('plugin_js').append('<script src="../assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>') %>

<% block('plugin_js').append('<script src="../custom/js/tasks/task.js" type="text/javascript"></script>') %>