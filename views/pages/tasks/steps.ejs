<% layout('layout/default') %>

<% block('plugin_css').append('<link href="/assets/global/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" type="text/css"/>') %>
<% block('plugin_css').append('<link href="/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css"/>') %>

<!-- BEGIN CONTAINER -->
<div class="page-container">
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <!-- BEGIN PAGE HEAD-->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>Task Steps: <%- task.name %></h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD-->
        <!-- BEGIN PAGE CONTENT BODY -->
        <div class="page-content">
            <div class="container">
                <!-- BEGIN PAGE BREADCRUMBS -->
                <ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="/">Home</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <a href="/tasks">Tasks</a>
                        <i class="fa fa-square"></i>
                    </li>
                    <li><span>Task Steps</span></li>
                    <li><i class="fa fa-circle"></i> </li>
                    <li><i class="glyphicon glyphicon-calendar"></i> <%= new Date(Date.now()).toDateString()  %></li>
                    <li><i class="fa fa-circle"></i> </li>
                    <li><i class="glyphicon glyphicon-time"></i> <span id="timer"></span></li>
                </ul>
                <!-- END PAGE BREADCRUMBS -->
                <% include ../../errors/flash %>
                <!-- BEGIN PAGE CONTENT INNER -->
                <div class="page-content-inner">
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-list font-green"></i>
                                <span class="caption-subject font-green bold uppercase">Task Steps: <%- task.name %></span>
                            </div>
                            <span class="pull-right font-blue bold uppercase"><i class="fa fa-edit"></i> <a href="/steps/<%= task._id %>">Edit Steps</a></span>
                        </div>
                        <div class="portlet-body">
                            <div class="row">
                                <% if(steps && steps.length > 0) { %>
                                    <% for(var i = 0; i < steps.length; i++) { %>
                                        <div class="col-md-10">
                                            <div class="well">
                                                <h4>Step: <%= (i + 1) %></h4>
                                                <p><%- steps[i].describe %></p>
                                            </div>
                                            <% if(typeof steps[i].image_url != 'undefined' && steps[i].image_url != '') { %>
                                                <img src="<%= steps[i].image_url %>" class="img-responsive pic-bordered" style="width: 720px;"/>'
                                            <% } %>
                                        <hr><hr>
                                        </div>
                                    <% } %>
                                <% } else { %>
                                    <div class="well">
                                        <h4>No Step Assigned Yet</h4>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PAGE CONTENT INNER -->
            </div>
        </div>
        <!-- END PAGE CONTENT BODY -->
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
</div>
<!-- END CONTAINER -->
<% block('plugin_js').append('<script src="/assets/global/plugins/bootstrap-select/js/bootstrap-select.js" type="text/javascript"></script>') %>
<% block('plugin_js').append('<script src="/assets/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js" type="text/javascript"></script>') %>